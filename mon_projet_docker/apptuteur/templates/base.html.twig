<!DOCTYPE html>
<html lang="fr">
	<head>
		<meta charset="UTF-8">
		<meta name="viewport" content="width=device-width, initial-scale=1">
		<title>
			{% block title %}Mon Application
			{% endblock %}
		</title>
		<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
		{% block stylesheets %}
			<link rel="stylesheet" href="{{ asset('css/style.css') }}">
		{% endblock %}
	</head>
	<body class="bg-light">
		<header class="mb-4">
			<nav class="navbar navbar-expand-lg navbar-dark bg-primary">
				<div class="container-fluid">
					<a class="navbar-brand" href="{{ path('dashboard') }}">Appli Visites</a>
					<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNav" aria-controls="mainNav" aria-expanded="false" aria-label="Toggle navigation">
						<span class="navbar-toggler-icon"></span>
					</button>
					<div class="collapse navbar-collapse" id="mainNav">
						<ul class="navbar-nav me-auto mb-2 mb-lg-0">
							<li class="nav-item">
								<a class="nav-link" href="{{ path('dashboard') }}">Tableau de bord</a>
							</li>
							<li class="nav-item">
								<a class="nav-link" href="{{ path('etudiants_index') }}">Étudiants</a>
							</li>
						</ul>
						<ul class="navbar-nav ms-auto mb-2 mb-lg-0">
							{% set connectedTuteurId = app.session.get('tuteur_id') %}
							{% if connectedTuteurId %}
								<li class="nav-item">
									<a class="nav-link" href="{{ path('logout') }}">Déconnexion</a>
								</li>
							{% else %}
								<li class="nav-item">
									<a class="nav-link" href="{{ path('login') }}">Connexion</a>
								</li>
							{% endif %}
						</ul>
					</div>
				</div>
			</nav>
		</header>

		<main class="container mb-5">
			{% for label, messages in app.flashes %}
				{% for message in messages %}
					<div class="alert alert-{{ label == 'error' ? 'danger' : label }}" role="alert">{{ message }}</div>
				{% endfor %}
			{% endfor %}
			{% block body %}{% endblock %}
		</main>

		<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
		{% block javascripts %}{% endblock %}
	</body>
</html>
